<% if item.photo.exists? %>

	<% if @viewSize == 'small' %>
	
		<div class="snuffWrap">
			<div class="snuffContentWrap" id="snuffle-<%=item.id%>">
				<%= link_to (image_tag item.photo.url(:thumb)), item, :class => 'snuffImg' %>
				<div class="snuffDetails" style="background: url('<%=item.photo.url(:thumb)%>')">
					<div class="seethrough"></div>
					<div class="snuffDetailsFrom">
						<%= link_to item.user.username, user_path(item.user) %>
						<%= link_to 'host', item.from if item.from != "" -%>
						<%= render(:partial => "items/item_pick", :locals => { :item => item })%>
					</div>
				</div>
			</div>
			<%= link_to item.name[0,15], item, :class => 'snuffName' %>
		</div>
		
	<% elsif @viewSize == 'large' %>
		
		<div class="snuffWrapLarge">
			<div class="snuffContentWrap" id="snuffle-<%=item.id%>">
				<%= link_to (image_tag item.photo.url(:medium)), item, :class => 'snuffImg' %>
				<div class="snuffDetails" style="background: url('<%=item.photo.url(:medium)%>')">
					<div class="seethrough"></div>
					<div class="snuffDetailsFrom">
						<div class="snufflrAva">
							<%= link_to(item.user.username, user_path(item.user, :size => @viewSize)) %>
						</div>
						<%= link_to 'host', item.from if item.from != "" -%>
						<%= render(:partial => "items/item_pick", :locals => { :item => item })%>
					</div>
				</div>
			</div>
			<%= link_to item.name[0,40], item, :class => 'snuffName' %>
		</div>	
				
	<% end %>

<% end %>